generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  id            String    @id @default(cuid())
  description   String
  categoryKey   String
  priorityKey   String
  importanceKey String
  statusKey     String
  deadline      DateTime? @map("deadline")

  createdAt DateTime @default(now())

  importance Importance @relation(fields: [importanceKey], references: [key])
  priority   Priority   @relation(fields: [priorityKey], references: [key])
  category   Category   @relation(fields: [categoryKey], references: [key])
  status     Status     @relation(fields: [statusKey], references: [key])

  @@map("todos")
}

model Category {
  key   String @id
  name  String
  todos Todo[]

  @@map("categories")
}

model Priority {
  key   String @id
  name  String
  todos Todo[]

  @@map("priorities")
}

model Importance {
  key   String @id
  name  String
  todos Todo[]

  @@map("importants")
}

model Status {
  key   String @id
  name  String
  todos Todo[]

  @@map("statuses")
}
