generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  id            String     @id @default(cuid())
  description   String
  categoryKey   String
  category      Category   @relation(fields: [categoryKey], references: [key])
  priorityKey   String
  priority      Priority   @relation(fields: [priorityKey], references: [key])
  importanceKey String
  importance    Importance @relation(fields: [importanceKey], references: [key])
  statusKey     String
  status        Status     @relation(fields: [statusKey], references: [key])
  createdAt     DateTime   @default(now())
  deadline      DateTime?  @map("deadline")

  @@map("todos")
}

model Category {
  key   String @id
  name  String
  todos Todo[]

  @@map("categories")
}

model Priority {
  key   String @id
  name  String
  todos Todo[]

  @@map("priorities")
}

model Importance {
  key   String @id
  name  String
  todos Todo[]

  @@map("importants")
}

model Status {
  key   String @id
  name  String
  todos Todo[]

  @@map("statuses")
}
